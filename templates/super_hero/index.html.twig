{% extends 'base.html.twig' %}

{% block title %}Hello SuperHeroController!
{% endblock %}

{% block body %}
	<div class="herobanner"></div>
	<h1>Liste de Super Héros</h1>
	<div
		class="formulaire">
		<!--Liste des super heros-->
		<div class="ListeSuperHeros">

			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">Nom</th>
						<th scope="col">Alter ego</th>
						<th scope="col">disponible</th>
						<th scope="col">Energie</th>
						<th scope="col">Date de création</th>
					</tr>
				</thead>
				<tbody>
					{% for SuperHero in SuperHero %}
						<tr>

							<td>{{SuperHero.nom}}</td>
							<td>{{SuperHero.AlterEgo}}</td>
							<td>{{SuperHero.disponible}}</td>
							<td>{{SuperHero.energylevel}}</td>
							<td>{{SuperHero.DateDeCreation|date("m/d/y")}}</td>
							<td>
								<a href="/superhero/{id}/edit" , id class="btn btn-primary">Editer</a>
							</td>


							{%endfor%}@mdo
						</tr>
					</td>
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
